  <link rel="stylesheet" href="./styles/style.css">
</head>

<body>
  <nav class="navbar bg-dark text-white py-0">
    <form class="form-inline">
      <span class="search-group bg-light pl-2 d-flex align-items-center">
        <i class="fas fa-search text-dark"></i>
        <input type="text" class="form-control ml-2" autocomplete="off" placeholder="Search...">
      </span>
      <button class="btn transparent">
        <i class="far fa-bell text-light"></i>
      </button>
    </form>
    <ul class="navbar nav p-0">
      <li class="p-3 nav-item nav-link active">Home</li>
      <li class="p-3 nav-item nav-link">Listings</li>
      <li class="p-3 nav-item nav-link">Transaction History</li>
    </ul>
    <div class="navbar-brand dropdown">
      <button class="dropdown-toggle" data-toggle="dropdown" id="profileDD">
        <span class="lead">
          <%= user%>
        </span>
        <img src="https://orig00.deviantart.net/6a12/f/2014/195/4/4/kurisu_makise_by_animeprofileavatars-d7qqa8s.jpg" class="profile-img">
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="/">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <h1 class="display-4 my-4">Reservation Requests</h1>
    <table class="table text-center">
      <tr>
        <th>Room No.</th>
        <th>ClientID</th>
        <th>Name</th>
        <th>Accomodation</th>
        <th>Contanct</th>
        <th>Date Requested</th>
        <th>Duration of Stay</th>
        <th>Action</th>
      </tr>
      <tr>
        <td>001</td>
        <td>000321</td>
        <td>Okabe, Rintarou</td>
        <td>
          <ul class="list-unstyled">
            <li>1 male</li>
            <li>1 female</li>
          </ul>
        </td>
        <td>0946-165-4651</td>
        <td>04/15/2018</td>
        <td>4 days</td>
        <td>
          <div class="btn-group-vertical">
            <button class="btn btn-success">Accept</button>
            <button class="btn btn-danger">Deny</button>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6">
        <div class="list-group text-dark">
          <div class="list-group-item">
            <div class="d-flex align-items-center">
              <img src="http://senpai-knows.com/wp-content/uploads/2015/09/Okabe-RIntarou-Charecter-01-01.png" alt="Okabe, Rintarou" class="profile-img">
              <div class="profile-details ml-2">
                <div>Okabe, Rintarou</div>
                <div>on Room 001</div>
              </div>
              <small class="ml-auto align-self-start">April 01, 2018</small>
            </div>
            <p class="mt-3">I'm Hououin, Kyouma! HAHAHAHAHA! Otsukaresama Kuristina!</p>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="bg-light rounded py-3 text-dark">
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary">Create Listing</button>
          </div>
          <h4 class="text-center my-3">Earnings for April</h4>
          <div class="container text-center border border-dark rounded w-50 mb-3">
            <h5>PHP</h5>
            <h5>30, 000</h5>
          </div>
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary">See Transaction History</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>